! file: .Xdefaults
! author: Adrià López <adria@prealfa.com>


! Xft settings
Xft.antialias: true
Xft.hinting: true
Xft.hintstyle: hintslight

! Defaults for URXVT 256c
URxvt.buffered:		true
URxvt.background:	rgba:1111/1111/1111/ffff
URxvt.foreground:	white
URxvt.cursorColor:	red
URxvt.underlineColor:	green
URxvt.font:		xft:Consolas:pixelsize=13;antialias=true:bold:hinting=true:
URxvt.boldFont:		xft:Consolas:bold:pixelsize=14:antialias=true:hinting=true:
URxvt.perl-ext-common:	default,tabbed
URxvt.title:		Terminal
URxvt*visualBell:	false
URxvt*depth:		24
URxvt*transparent:	true
URxvt*tint:         black
URxvt*shading:      10
URxvt*inheritPixmap:true
URxvt.tabbed.tab-fg:6
URxvt.tabbed.tab-bg:-1
URxvt.tabbed.tabbar-fg:-2
URxvt.tabbed.tabbar-bg:-1

! Scrolling
!! Do not scroll with output
URxvt*scrollTtyOutput:      false
!! Scfroll in relation to buffer
URxvt*scrollWithBuffer: true
!! Scroll back to bottom on keypress
URxvt*scrollTtyKeypress: true
!! Scrollbar Style
*scrollBar:	false

! Copy/Paste
URxvt*clipboard.copycmd:    xclip -i -selection clipboard
URxvt*clipboard.pastecmd:   xclip -o -selection clipboard

! Xpdf
xpdf*enableFreetype:	yes
xpdf*antialias:		yes
