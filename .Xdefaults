! file: .Xdefaults
! author: Adrià López <adria@prealfa.com>


! Xft settings
Xft.antialias: true
Xft.hinting: true
Xft.hintstyle: hintslight

! Defaults for URXVT 256c
URxvt.buffered:		true
URxvt.background:	rgba:1111/1111/1111/ffff
URxvt.foreground:	white
URxvt.cursorColor:	red
URxvt.underlineColor:	green
URxvt.font:		xft:Inconsolata:pixelsize=13;antialias=true:bold:hinting=true:
URxvt.boldFont:		xft:Inconsolata:bold:pixelsize=14:antialias=true:hinting=true:
URxvt.perl-ext-common:	default,tabbed
URxvt.title:		Terminal
URxvt*visualBell:	false
URxvt*scrollWithBuffer: false
URxvt*scrollBar_right:	true
URxvt*scrollstyle:	plain
URxvt*depth:		24
URxvt*transparent:	true
URxvt*tint:         black
URxvt*shading:      10
URxvt*inheritPixmap:true
URxvt.tabbed.tab-fg:6
URxvt.tabbed.tab-bg:-1
URxvt.tabbed.tabbar-fg:-2
URxvt.tabbed.tabbar-bg:-1

! This screenname used to fuck rendering of highlights...
!URxvt*termName:screen-256color
! This was the fix, not needed anymore
!URxvt*colorIT: #ff0000

! Xpdf
xpdf*enableFreetype:	yes
xpdf*antialias:		yes
