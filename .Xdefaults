! file: .Xdefaults
! author: Adrià López <adria@prealfa.com>


! Xft settings
Xft.antialias: true
Xft.hinting: true
Xft.hintstyle: hintslight

! Defaults for URXVT 256c
URxvt.buffered:		true
URxvt.background: black
URxvt.foreground:	white
URxvt.cursorColor:	red
URxvt.underlineColor:	green
URxvt.font:		xft:Consolas:pixelsize=13;antialias=true:bold:hinting=true:
URxvt.boldFont:		xft:Consolas:bold:pixelsize=14:antialias=true:hinting=true:
URxvt*visualBell:	false
URxvt*depth:		32
URxvt*transparent:	true
URxvt*tint:         black
URxvt*shading:      30
URxvt*inheritPixmap:true
URxvt.tabbed.tab-fg:6
URxvt.tabbed.tab-bg:-1
URxvt.tabbed.tabbar-fg:-2
URxvt.tabbed.tabbar-bg:-1
urxvt*perl-ext-common:        default,matcher
urxvt*urlLauncher:        /usr/bin/chromium
urxvt*matcher.button:        1

!! Colors
! Optometrist colors

*color0: #010101
*color1: #e48167
*color10: #82b356
*color11: #efce75
*color12: #6780c7
*color13: #d166ae
*color14: #7e64c9
*color15: #fffefe
*color2: #83b758
*color3: #efce75
*color4: #6c7ec5
*color5: #cf63ac
*color6: #825fcd
*color7: #acaaac
*color8: #717171
*color9: #e07d66

! Scrolling
!! Do not scroll with output
URxvt*scrollTtyOutput:      false
!! Scfroll in relation to buffer
URxvt*scrollWithBuffer: true
!! Scroll back to bottom on keypress
URxvt*scrollTtyKeypress: true
!! Lotsa Lines
URxvt*saveLines: 65535
!! Scrollbar Style
*scrollBar:	false

! Copy/Paste
URxvt*clipboard.copycmd:    xclip -i -selection clipboard
URxvt*clipboard.pastecmd:   xclip -o -selection clipboard

! Xpdf
xpdf*enableFreetype:	yes
xpdf*antialias:		yes

! ------------------------------------------------------------------------------
! ROFI Color theme
! ------------------------------------------------------------------------------
rofi.color-enabled: true
rofi.color-window: #002b37, #002b37, #003642
rofi.color-normal: #002b37, #819396, #002b37, #003642, #819396
rofi.color-active: #002b37, #008ed4, #002b37, #003642, #008ed4
rofi.color-urgent: #002b37, #da4281, #002b37, #003642, #da4281
